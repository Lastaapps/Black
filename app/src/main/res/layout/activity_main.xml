<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_above="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        >

        <ScrollView
            android:id="@+id/outerSc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp"
                tools:context=".MainActivity">

                <TextView
                    android:id="@+id/label"
                    style="@style/Main_Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name" />

                <ScrollView
                    android:id="@+id/innerSc"
                    android:layout_width="match_parent"
                    android:layout_height="132sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/advices"
                            style="@style/Label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="" />
                    </LinearLayout>
                </ScrollView>

                <ImageButton
                    android:id="@+id/color_circle"
                    android:contentDescription="Open change color dialog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent" />

                <SeekBar
                    android:id="@+id/size_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:scrollbarStyle="outsideInset" />

                <Button
                    android:id="@+id/start"
                    style="@style/Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="@string/start"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/start_activity"
                    style="@style/Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/startAsActivity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center|center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/share"
                        android:contentDescription="Shares the app"
                        style="@style/Icons"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        app:srcCompat="@drawable/share" />

                    <ImageButton
                        android:id="@+id/facebook"
                        android:contentDescription="Opens apps Facebook"
                        style="@style/Icons"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        app:srcCompat="@drawable/facebook" />

                    <ImageButton
                        android:id="@+id/github"
                        android:contentDescription="Opens apps sourcecode on Github"
                        style="@style/Icons"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        app:srcCompat="@drawable/github" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <TextView
        android:id="@+id/info"
        style="@style/Label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="version 0.0 000 by Lašťa apps 2000"
        android:textColor="@android:color/darker_gray"/>
</RelativeLayout>